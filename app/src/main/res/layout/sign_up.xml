<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity">
    <TextView
        android:id="@+id/create_login"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#3358FF"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:drawableLeft="@drawable/username"
        android:id="@+id/name_view"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/create_login"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:hint="Name"
        android:gravity="center"
        android:backgroundTint="@android:color/holo_red_light"/>
    <EditText
        android:drawableLeft="@drawable/email"
        android:id="@+id/email_view"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name_view"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:hint="Email"
        android:gravity="center"
        android:backgroundTint="@android:color/holo_red_light"/>
    <EditText
        android:drawableLeft="@drawable/password"
        android:id="@+id/pass_view"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email_view"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:hint="Password"
        android:gravity="center"
        android:backgroundTint="@android:color/holo_red_light"/>
    <EditText
        android:drawableLeft="@drawable/password"
        android:id="@+id/re_enter_view"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:hint="Re-enter Password"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/pass_view"
        android:gravity="center"
        android:backgroundTint="@android:color/holo_red_light"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00b0ef"
        android:text="done"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>